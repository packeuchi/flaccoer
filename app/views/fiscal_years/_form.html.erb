<%= simple_form_for @fiscal_year, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :for_copy, as: :hidden %>
  <%= f.input :base_fiscal_year_id, as: :hidden %>
  <%= f.input :title, input_wrapper_html: { class: "col-xs-5" } %>
  <%= error_span(@fiscal_year[:title]) %>
  <%= f.input :organization_name, input_wrapper_html: { class: "col-xs-7" } %>
  <%= error_span(@fiscal_year[:organization_name]) %>
  <% if f.object.new_record? && !@with_copy %>
    <%= f.association :subject_template_type, input_wrapper_html: { class: "col-xs-5" } %>
    <%= error_span(@fiscal_year[:subject_template_type]) %>
  <% end %>
  <%= f.input :date_from, input_wrapper_html: { class: "col-xs-5" }, as: :date_picker %>
  <%= error_span(@fiscal_year[:date_from]) %>
  <%= f.input :date_to, input_wrapper_html: { class: "col-xs-5" }, as: :date_picker %>
  <%= error_span(@fiscal_year[:date_to]) %>
  <%= f.input :locked, input_wrapper_html: { class: "col-xs-9" } %>
  <%= error_span(@fiscal_year[:locked]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          fiscal_years_path, :class => 'btn btn-default' %>
<% end %>
