<%- model_class = FiscalYear -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.list', '%{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:account_type) %></th>
      <th><%= model_class.human_attribute_name(:date_from) %></th>
      <th><%= model_class.human_attribute_name(:date_to) %></th>
      <th><%= model_class.human_attribute_name(:locked) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @fiscal_years.each do |fiscal_year| %>
      <tr>
        <td><%= fiscal_year.title %></td>
        <td><%= fiscal_year.account_type %></td>
        <td><%= fiscal_year.date_from %></td>
        <td><%= fiscal_year.date_to %></td>
        <td><%= fiscal_year.locked %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_fiscal_year_path(fiscal_year), :class => 'btn btn-default btn-sm' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  fiscal_year_path(fiscal_year),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
        new_fiscal_year_path,
        :class => 'btn btn-primary' %>
