<%= simple_form_for @balance_sheet_form, url: :balance_sheet_list do |f| %>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-4'><h3>合計残高試算表</h3></div>
      <div class='col-xs-4'><%= f.input :date_from, label: '取引日(自)', as: :date_picker %></div>
      <div class='col-xs-4'><%= f.input :date_to, label: '取引日(至)', as: :date_picker %></div>
    </div>
    <div class='row'>
      <div class='col-xs-6'>
        <%= link_to '表示', '#', class: 'btn btn-primary', id: 'balance-sheet-button' %>
        <%= link_to 'Excel(貸借)', '#', class: 'btn btn-info balance-sheet-excel-button', id: 'balance-sheet-excel-bs-button' %>
        <%= link_to 'Excel(損益)', '#', class: 'btn btn-info balance-sheet-excel-button', id: 'balance-sheet-excel-pl-button' %>
      </div>
      <div class='col-xs-6'></div>
    </div>
  </div>
<% end %>
