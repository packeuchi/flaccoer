<%= simple_form_for @balance_sheet_form, url: :balance_sheet_list do |f| %>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-4'>
        <h3>合計残高試算表</h3>
        <br />
        <br />
        <%= link_to '表示', '#', class: 'btn btn-primary', id: 'balance-sheet-button' %>
      </div>
      <div class='col-xs-4'>
        <%= f.input :date_from, label: '取引日(自)', as: :date_picker %>
        <%= f.input :date_to, label: '取引日(至)', as: :date_picker %>
      </div>
      <div class='col-xs-4'>
      </div>
    </div>
  </div>
<% end %>
