<%- child_class = Subject -%>
<div class="page-header">
  <h1>帳票位置の編集</h1>
</div>

<h3>会計年度：<%= @fiscal_year.select_box_name %></h3>

<%= simple_form_for @fiscal_year, url: :locations, wrapper: "horizontal_form", html: { class: 'form-horizontal' } do |f| %>
  <div class="container">
    <div class="row">
      <%= f.button :submit, class: 'btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")), root_path, class: 'btn btn-default' %>
      &nbsp;&nbsp;&nbsp;
      <%= link_to t('.backup', default: t("helpers.links.backup")), export_subjects_path(@fiscal_year, format: :csv), class: 'btn btn-default' %>
    </div>
  </div>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= child_class.human_attribute_name(:subject_type) %></th>
        <th><%= child_class.human_attribute_name(:code) %></th>
        <th><%= child_class.human_attribute_name(:name) %></th>
        <th><%= child_class.human_attribute_name(:report1_location) %></th>
        <th><%= child_class.human_attribute_name(:report2_location) %></th>
        <th><%= child_class.human_attribute_name(:report3_location) %></th>
        <th><%= child_class.human_attribute_name(:report4_location) %></th>
        <th><%= child_class.human_attribute_name(:report5_location) %></th>
      </tr>
    </thead>
    <tbody>
      <%= f.simple_fields_for :subjects do |c| %>
      <% unless c.object.disabled? %>
      <tr>
        <td><%= c.input :subject_type, label: false, readonly: true, disabled: 'enable' %></td>
        <td><%= c.input :code, label: false, readonly: true, disabled: 'enable' %></td>
        <td><%= c.input :name, label: false, readonly: true, disabled: 'enable' %></td>
        <td><%= c.input :report1_location, label: false %></td>
        <td><%= c.input :report2_location, label: false %></td>
        <td><%= c.input :report3_location, label: false %></td>
        <td><%= c.input :report4_location, label: false %></td>
        <td><%= c.input :report5_location, label: false %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>
