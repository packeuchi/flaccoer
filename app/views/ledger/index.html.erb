<h3>総勘定元帳</h3>
<%= simple_form_for @ledger_form, url: :ledger_list do |f| %>
  <%= f.input :subject_id,
          collection: @subjects,
          label_method: :to_s,
          value_method: :id,
          include_blank: false %>
  <%= f.input :date_from, as: :date_picker %>
  <%= f.input :date_to, as: :date_picker %>
  <div>&nbsp;</div>
  <div>
    <%= link_to '表示', '#', class: 'btn btn-primary', id: 'ledger-button' %>
    <%= link_to 'Excel出力', '#', class: 'btn btn-info', id: 'ledger-excel-button' %>
  </div>
  <div style="margin-top: 6px;">
    <% # TODO: Excel全件出力(ajaxで全件ダウンロード) %>
  </div>
<% end %>
