<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'ログイン' %></h1>
</div>
<%= simple_form_for @user, url: :session, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-2 col-xs-12"><%= model_class.human_attribute_name(:email) %></div>
      <div class="col-sm-10 col-xs-12"><%= f.input :email, label: false %></div>
    </div>
    <div class="row">
      <div class="col-sm-2 col-xs-12"><%= model_class.human_attribute_name(:password) %></div>
      <div class="col-sm-10 col-xs-12"><%= f.input :password, label: false %></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
      <div class="col-sm-6 col-xs-12">
        <%= f.button :submit, 'ログイン', :class => 'btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
